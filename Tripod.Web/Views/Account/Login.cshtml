@model Tripod.Domain.Security.SignIn

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form action="@Url.Action(MVC.SignIn.Index(null, (string)ViewBag.ReturnUrl))" method="POST" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserNameOrVerifiedEmail, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserNameOrVerifiedEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserNameOrVerifiedEmail)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.IsPersistent)
                            @Html.LabelFor(x => x.IsPersistent, "Remember me?")
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    <a href="@Url.Action(MVC.SignUp.SendVerificationEmail())">Sign up</a> if you don't have a local account.
                </p>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @{
                Html.RenderPartial(MVC.RemoteMemberships.Views._SignOnList, ViewData);
            }
        </section>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}