@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/content/css")
    @RenderSection("styles", required: false)
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div id="wrap">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header pull-left">
                    <a href="@Url.Action(MVC.Home.Index())" class="navbar-brand">Application name</a>
                </div>
                <div class="navbar-header pull-right">
                    @if (Request.IsAuthenticated)
                    {
                        <form class="pull-left" method="POST" action="@Url.Action(MVC.Authentication.LogOff())">
                            @Html.AntiForgeryToken()

                            <ul class="nav navbar-nav pull-left">
                                <li>
                                    <a href="@Url.Action(MVC.Account.Manage())" title="Manage">Hello @User.Identity.GetUserName()!</a>
                                </li>
                                <li>
                                    <input type="submit" value="Sign out" class="btn btn-link navbar-btn navbar-link" />
                                </li>
                            </ul>
                        </form>
                    }
                    else
                    {
                        <ul class="nav navbar-nav pull-left">
                            <li>
                                <a href="@Url.Action(MVC.SignIn.Index())">Sign in</a>
                            </li>
                            <li>
                                <a href="@Url.Action(MVC.SignUpEmail.Index())">Sign up</a>
                            </li>
                        </ul>
                    }
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action(MVC.Home.Index())">Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Home.About())">About</a>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Home.Contact())">Contact</a>
                        </li>
                    </ul>
                    @* RIGHT NAVBAR COLLAPSABLE ITEMS (WHEN NEEDED) *@
                    @*<ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#">Link Abc</a>
                            </li>
                            <li>
                                <a href="#">Link Xyz</a>
                            </li>
                        </ul>*@
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        <div class="container">
            <hr />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </footer>
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
